<%= form_for(@answer, url: new_question_answer_path(params[:question_id]), html: {class: 'form-signin', style: 'padding-bottom: 5px'}) do |f| %>
  <%= f.label :description, class: 'sr-only' %>
  <%= f.text_area :description, size: '40x10', placeholder: 'Well actually...' %>
  <%= f.submit 'Submit', class: 'btn btn-lg btn-primary btn-block' %>
<% end %>

<%= link_to 'Cancel', authenticated_root_path, class: 'cancel btn btn-lg btn-primary btn-block' %>

