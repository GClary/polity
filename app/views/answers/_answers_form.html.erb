<%= form_for( @answer, url: question_answers_path(params[:question_id]), html: {class: 'form-signin', style: 'padding-bottom: 5px'}) do |f| %>
  <%= f.label :description, class: 'sr-only' %>
  <%= f.text_area :description, class: 'form-control', size: '40x10', placeholder: 'Well actually...' %>
  <%= f.submit 'Submit', class: 'btn btn-lg btn-primary btn-block', style: 'margin-top: 5px' %>
<% end %>

<%= link_to 'Cancel', authenticated_root_path, class: 'cancel btn btn-lg btn-primary btn-block' %>

