
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin", style: "padding-bottom: 0px"}) do |f| %>
  <h2 class="form-signin-heading">Sign In</h2>
    <%= f.label :email, 'Email Address', class: 'sr-only' %>
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email Address' %>

    <%= f.label :password, class: 'sr-only'%>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>

  <div class="actions" style="margin-bottom: 10px">
    <%= f.submit "Sign In", class: 'btn btn-lg btn-primary btn-block' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <%= f.label :remember_me do %>
      <%= f.check_box :remember_me %>
        Remember Me
    <% end %>
  <% end -%>
<% end %>

<div> <%= link_to('Sign Up', new_user_registration_path) %> <span style="color: rgb(51, 122, 183); padding-left: 2px; padding-right: 2px">//</span>
<%= link_to('I Forgot My Password', new_user_password_path) %> </div>