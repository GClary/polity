

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <%= devise_error_messages! %>

    <%= f.label :email, 'Email Address', class: 'sr-only' %>
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email Address' %>

    <div class="signup-password">
    <%= f.label :password, class: 'sr-only'%>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
    </div>
    <%= f.label :password_confirmation, class: 'sr-only' %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirm Password' %>

    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>

  <div class="actions" style="margin-top: 10px">
    <%= f.submit "Sign Up", class: 'btn btn-lg btn-primary btn-block' %>
  </div>
<% end %>

<%= link_to('Already Registered? Sign In', new_user_session_path) %>
